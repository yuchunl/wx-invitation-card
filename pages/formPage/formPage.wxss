/* miniprogram/pages/contactPage/contactPage.wxss */
page{
  width:100%;
  height:100vh;
}
.formPage{
  width:100%;
  min-height:100vh;
}

.formPage image{
  width:100%;
  min-height:calc(100vh - 120rpx); 
}

.formContent{
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%, -50%);
}

.topImg{
  display: flex;
  justify-content: center;
}

.topImg image{
  margin-top:100rpx;
  width:100%;
  border-radius: 5px;
}

.guestForm{
  padding:15px;
  /* background-color:#fff; */
  border-radius: 5px;
  width:400rpx;
  margin:auto;
  margin-bottom: 20px;
}

.guestForm .title{
  text-align: center;
  margin:auto;
}

.guestForm .field{
  margin:0px auto;
}

.guestForm .field .label{
  flex:1;
  font-size:10px;
  color: #000;
}

.guestForm .field input{
  flex:1;
  border:1px solid #000;
  border-radius: 5px;
  height:30px;
  padding-left:0.5em;
}

.guestForm .submitBtn{
  background-color:#FF9C41;
  color: #fff;
  border-radius: 5px;
}

.guestForm .formBtn{
  font-size:13px;
  margin: 15px auto;
}

.flowerImg{
  display:flex;  
}

