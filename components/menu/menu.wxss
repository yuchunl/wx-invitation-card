/* components/menu/menu.wxss */
.tabAction {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  font-size: 24rpx;
  flex-direction: column;
  background: #fff;
  border-top: 1px solid #EAE9EA;
  box-sizing: border-box;
}
.tabAction .tabBox{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-wrap: nowrap;
}
.tabAction .tabBox .tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tabAction .tab image{
  margin-bottom: 10rpx;
  width: 40rpx;
}

.tabAction .special image{
  width: 100rpx;
  height: 100rpx;
}

.tabAction .FoX{
  width: 100%;
  height: 38rpx;
}